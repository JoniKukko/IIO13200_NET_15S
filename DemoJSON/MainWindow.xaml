<Window x:Class="DemoJSON.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoJSON"
        mc:Ignorable="d"
        Title="DemoJSON" Height="400" Width="600">
    <Grid>

        <Button x:Name="button_GetJson" Content="Button" Width="600" Height="30" Click="button_GetJson_Click" />
        <TextBox x:Name="textbox_Json" Margin="0,30,0,0" Text="TextBox" Width="600" Height="100" />
        
        <DataGrid x:Name="datagrid_Data" Margin="0,130,0,0" ItemsSource="{Binding}" />
        

    </Grid>
</Window>